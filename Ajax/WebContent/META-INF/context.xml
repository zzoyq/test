<?xml version="1.0" encoding="UTF-8"?>

<Context>
	<!-- 톰캣 실행시  ConnectionPool로 연결할 데이터베이스정보를 설정 하는 소스
	
	<Resource />태그의 속성들
	 name="DataSource에 대한 이름"
	 auth="인증 주체"
	 driverClassName="연결할 데이터베이스 종류에 따른 드라이버 클래스 이름"
	 url="접속할 데이터베이스 주소와 포트번호 및  SID"
	 username="데이터베이스 접속 ID"
	 password="데이터베이스 접속 비밀번호"
	 maxActive="동시에 최대로 데이터베이스에 연결할수 있는 Connection객체(접속객체)의 수"
	 maxWait="새로운 연결이 생길 떄까지 기다릴수 있는 최대 시간"
	 -->
	
	<Resource 
	 name="jdbc/oracle"
	 auth="Container"
	 type="javax.sql.DataSource"
	 driverClassName="oracle.jdbc.OracleDriver"
	 url="jdbc:oracle:thin:@localhost:1521:XE"
	 username="scott"
	 password="tiger"
	 maxActive="50"
	 maxWait="-1"
	/>
	
	<!-- 다른 속성들은 고정적으로 사용되며, 
	        주로 driverClassName, username, password ,url속성만 변경해서 사용함 -->

</Context>


